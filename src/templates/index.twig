    <script>
      
      function initMap() {
          var map;
          var uluru = {lat: 37.777, lng: -122.424};
        map = new google.maps.Map(document.getElementById('map'), {
          center: uluru,
          zoom: 17,
          mapTypeControl: false,
          streetViewControl: false,
          styles: [
            {
                "featureType": "landscape.man_made",
                "elementType": "geometry",
                "stylers": [
                {
                    "color": "#e7e7e7"
                }
                ]
            },
            {
                "featureType": "landscape.man_made",
                "elementType": "geometry.fill",
                "stylers": [
                {
                    "color": "#e7e7e7"
                },
                {
                    "visibility": "on"
                },
                {
                    "weight": 2.5
                }
                ]
            },
            {
                "featureType": "landscape.man_made",
                "elementType": "labels.icon",
                "stylers": [
                {
                    "color": "#e7e7e7"
                }
                ]
            },
            {
                "featureType": "poi.business",
                "stylers": [
                {
                    "visibility": "off"
                }
                ]
            },
            {
                "featureType": "poi.park",
                "elementType": "labels.text",
                "stylers": [
                {
                    "visibility": "off"
                }
                ]
            }
            ]
        });
        var marker = new google.maps.Marker({position: uluru, map: map});
      }
      
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBmmvRPDWEKXnIl7ZMKUHaZDDPfW9g_OgY&callback=initMap"
